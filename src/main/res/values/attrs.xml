<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 标题栏属性 -->
    <declare-styleable name="TitleViewAttrs">
        <attr name="rightImageSrc" format="reference" />
        <attr name="leftImageSrc" format="reference" />
        <attr name="rightImageBigSrc" format="reference" />
        <attr name="leftImageBigSrc" format="reference" />
        <attr name="centerValue" format="string" />
        <attr name="rightValue" format="string" />
        <attr name="leftValue" format="string" />
        <attr name="bg" format="color" />
        <!--网络异常-->
        <attr name="netExceptionImgWaring" format="reference" /><!-- 动态更换警告图片View控件 -->
        <attr name="netExceptionTextValue" format="string" /><!-- 动态更换文字显示View控件 网络状态 -->
        <attr name="netExceptionImgSetting" format="reference" /><!-- 动态更换右侧图片View控件 -->
    </declare-styleable>

    <!-- 轮播图属性 -->
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>

    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="centered" format="boolean" />
        <attr name="fadeOut" format="integer" />
        <attr name="radius" format="dimension" />
        <attr name="inactiveType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="circleSeparation" format="dimension" />
        <attr name="activeRadius" format="dimension" />
    </declare-styleable>

    <!-- 圆角图片 -->
    <declare-styleable name="RoundAngleImageView">
        <attr name="roundWidth" format="dimension" />
        <attr name="roundHeight" format="dimension" />
    </declare-styleable>

    <!--分类栏目view-->
    <declare-styleable name="CategoryTitleViewAttrs">
        <attr name="text" format="string" />
    </declare-styleable>

    <!-- 图片,文字垂直控件 -->
    <declare-styleable name="ImageAndTextVerticalViewAttrs">
        <attr name="imageSrc" format="reference" />
        <attr name="textValue" format="string" />
    </declare-styleable>

    <!-- 图片,文字垂直控件 -->
    <declare-styleable name="ImageIncludeTextViewAttrs">
        <attr name="imageIncludeSrc" format="reference" />
        <attr name="textIncludeValue" format="string" />
        <attr name="textIncludeColor" format="color" />
    </declare-styleable>

    <!--时间轴-->
    <declare-styleable name="timeline_style">
        <attr name="marker" format="color|reference" />
        <attr name="line" format="color|reference" />
        <attr name="marker_size" format="dimension" />
        <attr name="line_size" format="dimension" />
        <attr name="line_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="markerInCenter" format="boolean" />
    </declare-styleable>

    <!-- 菜单View控件 -->
    <declare-styleable name="MenuItemViewAttrs">
        <attr name="imageLeftSrc" format="reference" />
        <attr name="textRightValue" format="string" />
    </declare-styleable>

    <!--滑动Tab控件-->
    <attr name="visible_tab_count" format="integer" />
    <declare-styleable name="ViewPagerIndicator">
        <attr name="visible_tab_count" />
    </declare-styleable>
    <!-- 横向文字排列 -->
    <declare-styleable name="LinearLayoutTextView">
        <attr name="tv_desc_name" format="string" />
        <attr name="tv_desc_content" format="string" />
    </declare-styleable>

    <declare-styleable name="CirclePageIndicator">

        <!-- Whether or not the indicators should be centered. -->
        <attr name="indicatorcentered" format="boolean" />
        <!-- Color of the filled circle that represents the current page. -->
        <attr name="fillColor" format="color" />
        <!-- Color of the filled circles that represents pages. -->
        <attr name="pageColor" format="color" />
        <!-- Orientation of the indicator. -->
        <attr name="android:orientation" />
        <!-- Radius of the circles. This is also the spacing between circles. -->
        <attr name="indicaterradius" format="dimension" />
        <!-- Whether or not the selected indicator snaps to the circles. -->
        <attr name="snap" format="boolean" />
        <!-- Color of the open circles. -->
        <attr name="strokeColor" format="color" />
        <!-- Width of the stroke used to draw the circles. -->
        <attr name="strokeWidth" format="dimension" />
        <!-- View background -->
        <attr name="android:background" />
        <!-- The interval between the dots -->
        <attr name="interval" format="dimension|reference" />
    </declare-styleable>


    <!-- Style of the circle indicator. -->
    <attr name="vpiCirclePageIndicatorStyle" format="reference" />

    <!-- 菜单View控件 -->
    <declare-styleable name="KeyValueAttrs">
        <attr name="mTextKey" format="string" />
        <attr name="mTextValue" format="string" />
    </declare-styleable>

</resources>