<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppCompat.Actionbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="android:windowAnimationStyle">@style/MyActivitySwitchAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:contentInsetStart" tools:ignore="NewApi">0dp</item>
        <item name="android:contentInsetEnd" tools:ignore="NewApi">0dp</item>
    </style>

    <!--activity之间的切换动画-->
    <style name="MyActivitySwitchAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/infromright</item>
        <item name="android:activityOpenExitAnimation">@anim/outtoleft</item>
        <item name="android:activityCloseEnterAnimation">@anim/infromleft</item>
        <item name="android:activityCloseExitAnimation">@anim/outtoright</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--分享风格-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!--分享风格-->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- Activity的LinearLayout -->
    <style name="ActivityLinearLayout">
        <item name="android:id">@id/topLayout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 普通进度对话框的风格 -->
    <style name="NormalProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- Activity对话框的风格 -->
    <style name="ActivityDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

    <!-- TOP title左上角按钮样式 -->
    <style name="common_title_IV_left">
        <item name="android:layout_width">11dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/ic_return</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- TOP 中间文字样式 -->
    <style name="common_title_TV_center">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- TOP 右上角按钮样式 -->
    <style name="common_title_TV_right">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <!-- 更换头像弹出PopupWindow动画 -->
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <!-- 设置页左侧TextView样式 -->
    <style name="setting_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- 加载框 -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@color/color_transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!---->
</resources>
