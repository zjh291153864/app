<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:background="@color/white"
        android:clickable="true">
        <TextView
            android:id="@+id/tv_menu_image"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_member_centre_my_orders"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tv_menu_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/tv_menu_image"
            android:text="@string/mc_my_order"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_menu_textview"
            android:background="@color/mc_page_boundary_color"/>
    </RelativeLayout>
</LinearLayout>