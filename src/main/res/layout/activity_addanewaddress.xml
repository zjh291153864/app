<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_addanewaddress_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:xqshijie="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.zhonghong.xqshijie.widget.TitleView
        android:id="@id/title"
        style="@style/title"
        xqshijie:leftImageSrc="@drawable/ic_return"
        xqshijie:centerValue="@string/add_a_new_address" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addressee"
                android:textSize="15sp"
                android:textColor="@color/text_color"/>
            <com.zhonghong.xqshijie.widget.CleanableEditText
                android:id="@+id/et_addanewaddress_addressee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:maxLength="8"
                android:inputType="text"
                android:singleLine="true"
                android:background="@null"
                android:drawableRight="@drawable/ic_erasing_input"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mc_page_boundary_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_information"
                android:textSize="15sp"
                android:textColor="@color/text_color"/>
            <com.zhonghong.xqshijie.widget.CleanableEditText
                android:id="@+id/et_addanewaddress_contact_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:inputType="phone"
                android:maxLength="11"
                android:background="@null"
                android:drawableRight="@drawable/ic_erasing_input"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mc_page_boundary_color"/>
        <LinearLayout
            android:id="@+id/ll_addanewaddress_mailing_address"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mailing_address"
                android:textSize="15sp"
                android:textColor="@color/text_color"/>
            <TextView
                android:id="@+id/tv_addanewaddress_mailing_address"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <ImageView
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_member_centre_enter"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/mc_page_boundary_color"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address"
                android:textSize="15sp"
                android:textColor="@color/text_color"/>
            <com.zhonghong.xqshijie.widget.CleanableEditText
                android:id="@+id/et_addanewaddress_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:singleLine="true"
                android:background="@null"
                android:drawableRight="@drawable/ic_erasing_input"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_addanewaddress_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:text="@string/save"
        android:textSize="17sp"
        android:background="@drawable/common_btn_entity_blue"
        android:textColor="@color/white"/>
</LinearLayout>
