<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xqshijie="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityLinearLayout">

    <LinearLayout
        android:id="@+id/f_menu_log_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/f_menu_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f_menu_log_ll"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/menu_home_page_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/common_list_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_home_page" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_scenic_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/common_list_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_scenic" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/menu_ylt_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/common_list_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_ylt" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/menu_newcomer_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/common_list_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_newcomer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_conn_v"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/common_list_item_bg"
            android:clickable="true"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/menu_conn" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
