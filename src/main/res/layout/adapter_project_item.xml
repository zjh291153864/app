<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_includebg_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/image_onloading_homebig"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_projecttext_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="15dp"
        android:background="@drawable/common_images_transradius_right"
        android:gravity="center">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_loc" />

        <TextView
            android:id="@+id/tv_projectloc_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:text="test"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

</FrameLayout>