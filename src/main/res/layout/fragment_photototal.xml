<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xqshijie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhonghong.xqshijie.widget.TitleView
        android:id="@+id/total_title"
        style="@style/title"
        xqshijie:bg="@color/black"
        xqshijie:centerValue="1/72"
        xqshijie:leftImageSrc="@drawable/ic_return" />

    <com.zhonghong.xqshijie.widget.PhotoListView
        android:id="@+id/lv_photototal_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:listSelector="@android:color/transparent"
        android:padding="5dp"></com.zhonghong.xqshijie.widget.PhotoListView>


</LinearLayout>