<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:xqshijie="http://schemas.android.com/apk/res-auto"
    style="@style/ActivityLinearLayout"
    android:background="@color/mc_blank_page_color"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical"
        android:background="@drawable/ic_member_centre_bg">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_member_center_return"
                android:layout_width="11dp"
                android:layout_height="22dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_member_centre_return"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_member_center"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/iv_member_center_set_up"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_member_centre_set_up"
                android:layout_marginRight="12dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:clickable="false">
            <Button
                android:id="@+id/btn_member_center_log"
                android:layout_width="90dp"
                android:layout_height="33dp"
                android:text="@string/mc_log_in_now"
                android:textSize="15sp"
                android:onClick="onClick"
                android:textColor="@color/white"
                android:background="@drawable/member_center_login_btn_bg"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <RelativeLayout
                android:id="@+id/rl_member_conter_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:onClick="onClick"
                android:clickable="true"
                android:visibility="invisible">
                <com.zhonghong.xqshijie.widget.RoundAngleImageView
                    android:id="@+id/iv_member_center_head_portrait"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_member_centre_head_portrait"
                    xqshijie:roundWidth="28dp"
                    xqshijie:roundHeight="28dp"/>
                <TextView
                    android:id="@+id/tv_member_center_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_member_center_head_portrait"
                    android:text="@string/nickname2"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:clickable="false"/>
                <TextView
                    android:id="@+id/tv_member_center_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_alignBottom="@+id/iv_member_center_head_portrait"
                    android:layout_toRightOf="@+id/iv_member_center_head_portrait"
                    android:text="@string/phone_number"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:clickable="false"/>
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_member_centre_enter"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:clickable="false"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_income"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:onClick="onClick"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_member_center_income"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_member_centre_income"
            android:clickable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/iv_member_center_income"
            android:text="@string/mc_income"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_member_centre_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_my_order"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_member_center_my_order"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_member_centre_my_orders"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tv_member_center_my_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/iv_member_center_my_order"
            android:text="@string/mc_my_order"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_member_centre_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_member_center_my_order"
            android:background="@color/mc_page_boundary_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_account_settings"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="onClick"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_member_center_account_settings"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_member_centre_account_settings"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tv_member_center_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/iv_member_center_account_settings"
            android:text="@string/mc_account_settings"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_member_centre_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/tv_member_center_account_settings"
            android:background="@color/mc_page_boundary_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_member_center_about_us"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="onClick"
        android:background="@color/white"
        android:clickable="true">
        <ImageView
            android:id="@+id/iv_member_center_about_us"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_member_centre_about_us"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tv_member_center_about_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/iv_member_center_about_us"
            android:text="@string/mc_about_us"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_member_centre_enter"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"/>
    </RelativeLayout>
</LinearLayout>