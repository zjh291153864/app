<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_menu_logo"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_menu_logo" />

    <View
        android:id="@+id/view_menu_line"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_menu_logo"
        android:background="@color/mc_page_boundary_color"/>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_menu_line"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:listSelector="@drawable/lv_click_selector"
        android:scrollbars="none"
        android:textColor="#ffffff" />
</RelativeLayout>